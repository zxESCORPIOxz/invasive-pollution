<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <padding
                        android:left="6dp"
                        android:top="6dp"
                        android:right="6dp"
                        android:bottom="6dp"
                        />

                    <solid android:color="@color/orange"/>
                    <stroke android:width="10px" android:color="@color/orange" />
                    <corners android:radius="5dp" />
                </shape>
            </item>

            <item>

                <bitmap android:gravity="center|right" android:src="@drawable/flechaabajo"/>

            </item>

        </layer-list>
    </item>
</selector>